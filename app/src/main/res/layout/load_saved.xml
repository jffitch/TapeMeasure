<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.mathgeniusguide.tapemeasure.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="575dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            style="@style/titlebar"
            android:textSize="35sp"
            android:text="Loading Saved"
            />
        <Button
            android:layout_below="@id/title"
            android:id="@+id/back"
            style="@style/menu"
            android:text="Back" />
        <Button
            style="@style/press"
            android:id="@+id/press"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/settingLabel"
            style="@style/measureDisplayLeft"
            android:text="Load\nFrom:"
            android:layout_marginBottom="25dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/back"
            android:layout_marginLeft="25dp"
             />
        <Button
            android:layout_below="@id/settingLabel"
            android:id="@+id/delete"
            android:layout_marginLeft="25dp"
            android:layout_height="60dp"
            android:layout_width="100dp"
            android:background="#ff0000"
            android:text="DELETE"
            android:onClick="deleteSelected"
            />
        <Spinner
            android:id="@+id/saveSpinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/back"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
