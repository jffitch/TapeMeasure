<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.mathgeniusguide.tapemeasure.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            style="@style/titlebar"
            android:text="Calibrate" />

        <Button
            android:id="@+id/back"
            style="@style/menu"
            android:text="Back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/precision"
                    style="@style/menu"
                    android:text="Set Precision" />

                <Button
                    android:id="@+id/eye1"
                    style="@style/menu"
                    android:text="Set Eye Height #1" />

                <Button
                    android:id="@+id/eye2"
                    style="@style/menu"
                    android:text="Set Eye Height #2" />

                <Button
                    android:id="@+id/stride"
                    style="@style/menu"
                    android:text="Set Stride Distance" />

                <Button
                    android:id="@+id/cameraHeight"
                    style="@style/menu"
                    android:text="Set Camera Height" />

                <Button
                    android:id="@+id/cameraAngle"
                    style="@style/menu"
                    android:text="Set Camera Angle" />

                <Button
                    android:id="@+id/offset"
                    style="@style/menu"
                    android:text="Set Pitch Offset" />

                <Button
                    android:id="@+id/incline"
                    style="@style/menu"
                    android:text="Set Incline Angle" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
