<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.mathgeniusguide.tapemeasure.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="575dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:id="@+id/title"
            style="@style/titlebar"
            android:text="Bug Reporting"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you're experiencing any problems with this app (inaccurate results, inaccurate or confusing instructions, app crashes, etc.), you can click &quot;Send Email&quot; to send an email to jffitch@MathGeniusGuide.com.\n\nPlease describe in detail what happens and when it happens so the problem can be fixed."
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_below="@id/title"
            android:padding="20dp" />
        <Button
            android:id="@+id/sendEmail"
            style="@style/menu"
            android:text="Send Email"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/back"
            style="@style/menu"
            android:text="Back"
            android:layout_above="@id/sendEmail"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
