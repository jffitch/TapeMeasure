<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.mathgeniusguide.tapemeasure.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            style="@style/titlebar"
            android:text="Measure Length" />

        <Button
            android:id="@+id/back"
            style="@style/menu"
            android:text="Back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/measureLengthFromYou"
                    style="@style/menu"
                    android:text="From You" />

                <Button
                    android:id="@+id/measureLengthParallelInside"
                    style="@style/menu"
                    android:text="Parallel Inside" />

                <Button
                    android:id="@+id/measureLengthParallelOutside"
                    style="@style/menu"
                    android:text="Parallel Outside" />

                <Button
                    android:id="@+id/measureLengthPerpendicularInside"
                    style="@style/menu"
                    android:text="Perpendicular Inside" />

                <Button
                    android:id="@+id/measureLengthPerpendicularOutside"
                    style="@style/menu"
                    android:text="Perpendicular Outside" />

                <Button
                    android:id="@+id/measureLengthHypotenuse"
                    style="@style/menu"
                    android:text="Hypotenuse" />

                <Button
                    android:id="@+id/measureLengthFree"
                    style="@style/menu"
                    android:text="Free" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
