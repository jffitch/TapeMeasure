<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.mathgeniusguide.tapemeasure.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            style="@style/titlebar"
            android:text="Welcome to\nTape Measure" />

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/calibrate"
                    style="@style/menu"
                    android:text="Calibrate" />

                <Button
                    android:id="@+id/measure"
                    style="@style/menu"
                    android:text="Measure" />

                <Button
                    android:id="@+id/instructions"
                    style="@style/menu"
                    android:text="Instructions" />

                <Button
                    android:id="@+id/bugReporting"
                    style="@style/menu"
                    android:text="Bug Reporting" />

                <Button
                    android:id="@+id/fullVersion"
                    style="@style/menu"
                    android:text="Buy Full Version" />

                <Button
                    android:id="@+id/measureTest"
                    style="@style/menu"
                    android:text="Formula Testing" />

                <Button
                    android:id="@+id/checklist"
                    style="@style/menu"
                    android:text="Checklist" />

                <Button
                    android:id="@+id/consume"
                    style="@style/menu"
                    android:text="Consume" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
